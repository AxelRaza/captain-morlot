<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:gravity="center"
        tools:context=".properties.GameProperties">

    <TextView
            android:id="@+id/roles_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rÃ´les"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:textSize="35dp"
            android:gravity="center"
            android:fontFamily="@font/bloomer"
            android:layout_margin="30dp"
    />

    <TextView
            android:id="@+id/matelot_textview"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:text="1 Matelot"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:gravity="center"
            android:fontFamily="@font/bloomer"
            android:layout_margin="30dp"
            android:layout_below="@id/roles_textview"
            android:background="@drawable/matelot_background"
    />

    <TextView
            android:id="@+id/pirate_textview"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:text="1 Pirate"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:gravity="center"
            android:fontFamily="@font/bloomer"
            android:layout_margin="20dp"
            android:layout_below="@id/matelot_textview"
            android:background="@drawable/pirate_background"
    />

    <SeekBar
            android:id="@+id/pirate_seekbar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pirate_textview"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:min="0"
            android:max="100"
            android:progress="100"
    />

    <TextView
            android:id="@+id/moussaillon_textview"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:text="1 Moussaillon"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:gravity="center"
            android:fontFamily="@font/bloomer"
            android:layout_margin="20dp"
            android:layout_below="@id/pirate_seekbar"
            android:background="@drawable/moussaillon_background"
    />

    <SeekBar
            android:id="@+id/moussaillon_seekbar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/moussaillon_textview"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:min="0"
            android:max="100"
            android:progress="100"
    />

    <Button
            android:id="@+id/commencer_button"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="Commencer"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:fontFamily="@font/bloomer"
            android:background="@drawable/design_list_case"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/moussaillon_seekbar"
            android:layout_margin="30dp"
            android:onClick="launchGame"
    />

</RelativeLayout>