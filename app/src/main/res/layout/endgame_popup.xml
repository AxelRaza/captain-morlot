<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@android:color/holo_orange_dark">

    <TextView
            android:id="@+id/popup_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Fin de l'aventure !"
            android:textSize="25dp"
    />

    <TextView
            android:id="@+id/player_winner_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Nom du joueur"
            android:textSize="25dp"
            android:layout_below="@id/popup_textview"
            android:layout_marginTop="40dp"
    />

    <TextView
            android:id="@+id/winner_desc_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="A gagné la partie !"
            android:textSize="22dp"
            android:layout_below="@id/player_winner_textview"
            android:layout_margin="10dp"
    />





    <Button
            android:id="@+id/end_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@id/winner_desc_textview"
            android:text="Retour à l'accueil"
            android:layout_marginTop="40dp"
    />

</RelativeLayout>